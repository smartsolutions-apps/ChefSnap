rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 1. User Fridge Uploads: Strictly Private
    match /user_uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. AI Generated Images: Public Read (so recipes load), Auth Write
    match /generated_assets/recipes/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}